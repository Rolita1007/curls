<h1>Edit {{hairProduct.name}}</h1>

<div class="row">
  <form action="/hairProducts/{{product.id}}?_method=PATCH" method="POST" class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="hairProductName" value="{{hairProduct.name}}" class="form-control">
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <input type="text" name="hairProductDescription" value="{{hairProduct.description}}" class="form-control">
    </div>
    <div>
      <input type="submit" value="Submit" class="btn btn-primary">
    </div>
  </form>
</div>

<div>
  <a href="/products/{{product.id}}" class="btn btn-default">Back</a>
  <a href="/products" class="btn btn-default">Main Page</a>

