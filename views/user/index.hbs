<h1>Tell me about your Curls</h1>

<ol>
  {{#each user}}
    <li>
      <h1><a href="/users/{{this.id}}">{{this.first_name}} {{this.last_name}}</a></h1>
      <h3>{{this.typeOfCurl}}</h3>
      <p>{{this.hairProduct.name}}</p>
    </li>
  {{/each}}
</ol>

<a href="/users/new" class="btn btn-default">Create a new Curly Friend</a>
